generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
    id       String @id @default(cuid())
    username String @unique
    email    String
    password String

    sessions Session[]
}

model Session {
    id     String @id @default(cuid())
    token  String 

    userId String
    user   User   @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}